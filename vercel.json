{
  "builds": [
    {
      "src": "tech-store-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "tech-store-backend/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/tech-store-backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/tech-store-frontend/$1"
    }
  ],
  "buildCommand": "cd tech-store-frontend && npm run build",
  "outputDirectory": "tech-store-frontend/build"
}
