{
  "name": "tech-store-frontend",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://tu-dominio.com",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.12.2",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "copy-sw": "cp public/sw.js build/sw.js && cp public/offline.html build/offline.html",
    "generate-pwa-assets": "node scripts/generate-pwa-assets.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "build-pwa": "npm run generate-pwa-assets && npm run build",
    "preview": "npm run build && npx serve -s build -l 3000",
    "pwa-audit": "npx lighthouse http://localhost:3000 --only-categories=pwa --chrome-flags='--headless' --output=html --output-path=./pwa-audit.html"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "sharp": "^0.33.0"
  }
}
